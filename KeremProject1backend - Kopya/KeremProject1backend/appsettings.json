{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
        },
        "Console": {
            "IncludeScopes": true
        },
        "File": {
            "Path": "logs/app-log-.txt",
            "Append": true,
            "FileSizeLimitBytes": 10485760,
            "MaxRollingFiles": 10
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "UsersDb": "Server=(local)\\SQLEXPRESS;Database=KeremProject1Db;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
        "GeneralDb": "Server=(local)\\SQLEXPRESS;Database=KeremProject1Db;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True",
        "TestDb": "Server=(local)\\SQLEXPRESS;Database=KeremProject1Db;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True"
    },
    "JwtSettings": {
        "SecretKey": "",
        "Issuer": "your-app",
        "Audience": "your-app-users",
        "TokenExpirationInMinutes": 6240,
        "RefreshTokenExpirationInDays": 7
    },
    "ConfigDef": {
        "PayTrMerchantId": "YOUR_MERCHANT_ID",
        "PayTrMerchantKey": "YOUR_MERCHANT_KEY",
        "PayTrMerchantSalt": "YOUR_MERCHANT_SALT"
    },
    "EmailSettings": {
        "SmtpServer": "smtp.gmail.com",
        "SmtpPort": "587",
        "SmtpUsername": "Zeytin@gmail.com",
        "SmtpPassword": "",
        "EnableSsl": "true"
    },
    "AppSettings": {
        "CallbackBaseUrl": "https://sizin-site-adresiniz.com",
        "FileUploadSettings": {
            "MaxFileSizeInMb": 10,
            "AllowedExtensions": [".jpg", ".jpeg", ".png", ".pdf", ".docx"],
            "StoragePath": "Uploads"
        },
        "Security": {
            "PasswordRequirements": {
                "RequireDigit": true,
                "RequireLowercase": true,
                "RequireUppercase": true,
                "RequireNonAlphanumeric": true,
                "RequiredLength": 8
            },
            "EnableCaptchaOnLogin": true,
            "LockoutSettings": {
                "MaxFailedAttempts": 5,
                "LockoutTimeInMinutes": 15
            }
        },
        "Caching": {
            "ProductCacheTimeInMinutes": 15,
            "CategoryCacheTimeInMinutes": 60
        }
    },
    "Cors": {
        "AllowedOrigins": [
            "https://yourdomain.com",
            "https://www.yourdomain.com",
            "http://localhost:3000"
        ]
    }
